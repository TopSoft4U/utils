{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "outDir": "dist/esm",
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": false,
    "rootDir": "src",
    "declaration": true,
